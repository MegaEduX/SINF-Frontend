extends layout
include templates/navbar

mixin linha(s)
  tr
    td #{s.CodArtigo}
    td #{s.DescArtigo}
    td #{s.Unidade}
    td #{s.Quantidade}
    td #{s.PrecoUnitario}
    td #{s.Desconto}
    td
      +actions(s.CodArtigo)

mixin actions(cod)
  a(href='#')
    span.glyphicon.glyphicon-search(aria-hidden="true")

block content
  +nav(title)
  div.container
    .content-wrapper
      h1= title
      br
      p
        b Customer
        | : #{order.Entidade}
      p
        b Shipping Address
        | : #{customer.Morada}
      p
        b Date
        | : #{order.Data}
      p
        b Total
        | : #{customer.Moeda} #{order.TotalMerc}
      table.datatable.table.table-stripped.table-bordered
        thead
          tr
            th Code
            th Description
            th Unit
            th Quantity
            th Price
            th Discount
            th 
        tbody
          each val in order.LinhasDoc
            +linha(val)
