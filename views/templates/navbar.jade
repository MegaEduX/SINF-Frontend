mixin nav(active)
  .navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/')
          img(src="/images/logo-small.svg")#main-logo-small
      .navbar-collapse.collapse
        ul.nav.navbar-nav
          if (active == 'Home')
            li.active
              a(href='/') Home
          else
            li
              a(href='/') Home

          if (active == 'Sales')
            li.active
              a(href='/sales') Sales
          else
            li
              a(href='/sales') Sales

          if (active == 'Warehouses')
            li.active
              a(href='/warehouses') Warehouses
          else
            li
              a(href='/warehouses') Warehouses

          if (active == 'Customers')
            li.active
              a(href='/customers') Customers
          else
            li
              a(href='/customers') Customers
        ul.nav.navbar-nav.navbar-right
          if (active == 'Picking')
            li.active
              a(href='/picking') Picking Items (#[span(id='pickingItemCount') 0])
          else
            li
              a(href='/picking') Picking Items (#[span(id='pickingItemCount') 0])
          li
            a(href='/login') Log In
