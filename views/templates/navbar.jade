mixin nav(active, isAdmin)
  .navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/')
          img(src="/images/logo-small.svg")#main-logo-small
      .navbar-collapse.collapse
        ul.nav.navbar-nav
          if (active == 'Home')
            li.active
              a(href='/') Home
          else
            li
              a(href='/') Home

          if (active == 'Sales')
            li.active
              a(href='/sales') Sales
          else
            li
              a(href='/sales') Sales

          if (active == 'Routes')
            li.active
              a(href='/routes') Routes
          else
            li
              a(href='/routes') Routes

          if (active == 'Warehouses')
            li.active
              a(href='/warehouses') Warehouses
          else
            li
              a(href='/warehouses') Warehouses

          if (active == 'Customers')
            li.active
              a(href='/customers') Customers
          else
            li
              a(href='/customers') Customers
          if (level >= 1)
            if (active == 'Users')
              li.active
                a(href='/users') Users
            else
              li
                a(href='/users') Users
        ul.nav.navbar-nav.navbar-right
          if (active == 'Picking')
            li.active
              a(href='/picking') Picking Items (#[span(id='pickingItemCount') 0])
          else
            li
              a(href='/picking') Picking Items (#[span(id='pickingItemCount') 0])
          li
            a#logoutBtn(href='#')
              span.glyphicon.glyphicon-log-out(data-toggle='tooltip' data-placement='bottom' title='Logout')

