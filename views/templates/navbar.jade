mixin nav(active, level)
  .navbar.navbar-default.navbar-fixed-top(role='navigation')
    .navbar-wrapper
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/')
          img(src="/images/logo-small.svg")#main-logo-small
      .navbar-collapse.collapse
        ul.nav.navbar-nav
          if (active == 'Home')
            li.active
              a(href='/') Home
          else
            li
              a(href='/') Home
          
          if (active == 'Sales')
            li.active
              a(href='/sales') Sales
          else
            li
              a(href='/sales') Sales
              
          if (level <= 1)
            if (active == 'Routes')
              li.active
                a(href='/routes') Routes
            else
              li
                a(href='/routes') Routes
          
          if (level <= 1)
            if (active == 'Warehouses')
              li.active
                a(href='/warehouses') Warehouses
            else
              li
                a(href='/warehouses') Warehouses
          
          if (active == 'Customers')
            li.active
              a(href='/customers') Customers
          else
            li
              a(href='/customers') Customers
        
          if (level == 1)
            if (active == 'Users')
              li.active
                a(href='/users') Users
            else
              li
                a(href='/users') Users
                
          if (level == 1 || level == 2)
            if (active == 'Invoices')
              li.active
                a(href='/invoices') Invoices
            else
              li
                a(href='/invoices') Invoices
        
        ul.nav.navbar-nav.navbar-right
          if (level <= 1)
            if (active == 'Picking')
              li.active
                a(href='/picking')
                  span.picking-nav-icon.hide-on-tablet-view.glyphicon.glyphicon-list-alt(data-toggle='tooltip' data-placement='bottom' title='Picking items') 
                  span.picking-item-wrapper (#[span(id='pickingItemCount') 0])
            else
              li
                a(href='/picking') 
                  span.picking-nav-icon.hide-on-tablet-view.glyphicon.glyphicon-list-alt(data-toggle='tooltip' data-placement='bottom' title='Picking items') 
                  span.picking-item-wrapper (#[span(id='pickingItemCount') 0])
          li
            a#userProfileBtn(href='/user')
              span.hide-on-tablet-view.glyphicon.glyphicon-user(data-toggle='tooltip' data-placement='bottom' title='User profile')
              span.show-on-tablet-view User profile
          li
            a#logoutBtn(href='#')
              span.hide-on-tablet-view.glyphicon.glyphicon-log-out(data-toggle='tooltip' data-placement='bottom' title='Logout')
              span.show-on-tablet-view Log Out

