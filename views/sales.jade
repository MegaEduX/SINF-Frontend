extends layout
include templates/navbar

mixin sale(s)
  tr
    td #{s.Entidade}
    td #{s.Data}
    td #{s.TotalMerc}
    td #{s.Serie}
    td
      +actions(s.NumDoc)

mixin actions(sale)
  a.btn.btn-default(href='#', onclick='pickAllFromSale(' + sale + '); return false;', role='button' data-toggle='tooltip' data-placement='bottom' title='Pick All')
    span.glyphicon.glyphicon-plus(aria-hidden='true')
  a.btn.btn-default(href='/items/' + sale, role='button' data-toggle='tooltip' data-placement='bottom' title='Inspect')  
    span.glyphicon.glyphicon-search(aria-hidden='true')

block content
  script(src='/js/sales.js')
  +nav(title)
  div.container
    .content-wrapper
      h1= title
      table.datatable.table.table-stripped.table-bordered
        thead
          tr
            th Customer
            th Sale Date
            th Total
            th Series
            th Action
        tbody
          each val in sales
            +sale(val)
