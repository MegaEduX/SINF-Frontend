extends layout
include templates/navbar

script(src='/js/picking.js')

mixin linha(s)
  tr
    td #{s.order}
    td #{s.item}
    td
      a.btn.btn-xs.btn-danger(href="#", role='button' data-toggle='tooltip' data-placement='bottom' title='Delete') 
        span.glyphicon.glyphicon-trash(aria-hidden='true')

mixin actions(cod)
  a(href='#', onclick='removeFromShoppingCart("#{cod}"); return false;')
    span.glyphicon.glyphicon-plus(aria-hidden="true")

block content
  script(src='/js/picking.js')
  +nav(title)
  div.container
    .content-wrapper
      h1= title
      br
      table.table.table-stripped.table-bordered
        thead
          tr
            th Order
            th Code
            th Action
        tbody(id='pickingTable')
          each val in toPick
            +linha(val)
      a.btn.btn-success(href="/picking/create") 
        span.glyphicon.glyphicon-ok(aria-hidden='true')
        span.btn-text Create Picking Route
      span &nbsp; &nbsp;
      a.btn.btn-danger(href="#" id="deleteAll") 
        span.glyphicon.glyphicon-trash(aria-hidden='true')
        span.btn-text Delete All
      br
      br
