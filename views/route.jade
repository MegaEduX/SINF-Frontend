extends layout
include templates/navbar

script(src='/js/picking.js')

mixin linha(s)
  tr
    td -- TBD --
    td -- TBD --
    td #{s.item}
    td #{s.order}
    td
      a.btn.btn-xs.btn-danger(href="#") Remove

mixin actions(cod)
  a(href='#', onclick='removeFromShoppingCart("#{cod}"); return false;')
    span.glyphicon.glyphicon-plus(aria-hidden="true")

block content
  script(src='/js/picking.js')
  +nav(title, level)
  div.container
    .content-wrapper
      h1= title
      br
      table.table.table-stripped.table-bordered
        thead
          tr
            th Warehouse
            th Section
            th Code
            th Quantity
            th Action
        tbody(id='pickingTable')
          each val in toPick
            +linha(val)
      a.btn.btn-success(href="/picking/create") Create Picking Route
      span &nbsp; &nbsp;
      a.btn.btn-danger(href="#" id="deleteAll") Delete All Items
      br
      br
