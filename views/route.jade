extends layout
include templates/navbar

mixin showItem(i)
  tr
    td.item-id #{i.item}
    td #{i.warehouse}
    td #{i.floor}
    td #{i.corridor}
    td #{i.section}
    td #{i.lot}
    td #{i.needed}
    td.order-id #{i.order}
    td.action
      a.btn.btn-xs.btn-success.btn-done-picking-item(href="#") 
        span.glyphicon.glyphicon-ok
        span.btn-text Done

block content
  +nav(title, level)
  div.container
    .content-wrapper
      h1= title
      br
      table#routePickingTable.table.table-stripped.table-bordered
        thead
          tr
            th Item
            th Warehouse
            th Floor
            th Corridor
            th Section
            th Lot
            th Quantity
            th Order Code
            th Action
        tbody(id='pickingTable')
          each item in route.objects
            +showItem(item)
      button.btn.btn-success.btn-confirm-picking(href="#" disabled="") 
        span.glyphicon.glyphicon-ok(aria-hidden='true')
        span.btn-text Confirm
  script(src='/js/picking.js')
